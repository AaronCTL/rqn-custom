<openerp>
    <data>
        <template id="nrq_invoice_header_view">
            
                    <table BORDER="0">
                        <tr>
                            <td width="65%"> 
                                <table class="table">
                                    <tr>
                                        <td>
                                            <strong>Customer Name: </strong>
                                            <span t-field="o.partner_id.name"/>
                                            <t t-if="user.lang == 'ja_JP'">
                                                <t t-if="o.partner_id.company_type == 'person'">
                                                    <span>御中</span> 
                                                </t>
                                                <t t-if="o.partner_id.company_type == 'company'">
                                                    <span>様</span> 
                                                </t>
                                            </t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span>Please find the details as follows.</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Total Invoice: </strong><span style="font-size:18px;" t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Doc Title: </strong><span t-field="o.doc_title"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td width="5%"> 
                            </td>
                            <td width="30%"> 
                                 <div  style="background-image:url('/nrq_account_report/static/src/img/Selection_008.jpg'); background-repeat: no-repeat;" >
                                    <strong><span t-field="o.company_id.name"/></strong><br/>
                                    <span t-field="o.company_id.street"/><br/>
                                    <t t-if="o.company_id.street2">
                                    <span t-field="o.company_id.street2"/><br/></t>
                                    <span t-field="o.company_id.city"/>
                                    <span t-field="o.company_id.state_id"/>
                                    <span t-field="o.company_id.zip"/><br/>
                                    <span t-field="o.company_id.country_id"/><br/>
                                
                                Phone: <span t-field="o.company_id.phone"/><br/>
                                Fax: <span t-field="o.company_id.fax"/><br/>
                                Email: <span t-field="o.company_id.email"/><br/>
                                Website: <span t-field="o.company_id.website"/><br/>
                                </div>
                                <table class="table table-bordered">
                                    <tr>
                                        <td height="70"></td>
                                        <td height="70"></td>
                                        <td height="70"></td>
                                      </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
        </template>
        <template id="nrq_invoice_table_view"> 
            <div name="invoice_address" class="col-xs-5 col-xs-offset-7"></div>
                <br/>
                <!-- Is there a discount on at least one line? -->
                <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>
    
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th class="hidden">Source Document</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-right">Unit Price</th>
                            <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                            <th class="text-right">Taxes</th>
                            <th class="text-right">Tax Excluded Price</th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <tr t-foreach="o.invoice_line_ids" t-as="l">
                            <td><span t-field="l.name"/></td>
                            <td class="hidden"><span t-field="l.origin"/></td>
                            <td class="text-right">
                                <span t-field="l.quantity"/>
                                <span t-field="l.uom_id"  groups="product.group_uom"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.price_unit"/>
                            </td>
                            <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                <span t-field="l.discount"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.price_subtotal" 
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </tbody>
                </table>
    
            <t groups="sale.group_sale_layout" t-foreach="o.order_lines_layouted()" t-as="page">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-right">Unit Price</th>
                            <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                            <th class="text-right">Taxes</th>
                            <th class="text-right" groups="sale.group_show_price_subtotal">Price</th>
                            <th class="text-right price_tax_included" groups="sale.group_show_price_total">Total Price</th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-foreach="page" t-as="layout_category">
                            <t t-if="layout_category_size > 1 or page_size > 1" groups="sale.group_sale_layout">
                                <tr class="active">
                                    <td colspan="7" style="font-weight: bold; border-bottom: 1px solid black;">&amp;bull;
                                        <t t-esc="layout_category['name']"/>
                                    </td>
                                </tr>
                            </t>
                            <!-- Lines associated -->
                            <t t-foreach="layout_category['lines']" t-as="l">
                                <tr>
                                    <td><span t-field="l.name"/></td>
                                    <td class="text-right">
                                        <span t-field="l.quantity"/>
                                        <span t-field="l.uom_id"  groups="product.group_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                        <span t-field="l.discount"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="', '.join(map(lambda x: x.name, l.invoice_line_tax_ids))"/>
                                    </td>
                                    <td class="text-right" groups="sale.group_show_price_subtotal">
                                        <span t-field="l.price_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                    <td class="text-right" groups="sale.group_show_price_total">
                                        <span t-field="l.price_total"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                            </t>
    
                            <t t-if="(layout_category_size > 1 or page_size > 1) and layout_category['subtotal']" groups="sale.group_sale_layout">
                                <tr class="text-right">
                                    <td colspan="6">
                                        <strong>Subtotal: </strong>
                                        <t t-set="subtotal" t-value="sum(line.price_subtotal for line in layout_category['lines'])"/>
                                        <span t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
    
                <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
                    <p style="page-break-before:always;"> </p>
                </t>
            </t>
                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black">
                                <td><strong>Subtotal</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                <tr>
                                    <td><span t-esc="amount_by_group[0]"/></td>
                                    <td class="text-right">
                                        <span t-esc="amount_by_group[1]"/>
                                    </td>
                                </tr>
                            </t>
                            <tr class="border-black">
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                     <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <table class="table">
                    <tr>
                        <td width="32%">
                                <strong t-if="o.name">Reference/Description: </strong>
                                <span t-field="o.name"/>
                        </td>
                        <td width="32%">
                                <strong t-if="o.origin">Source Document: </strong>
                                <span t-field="o.origin"/>
                        </td>
                        <td width="18%" t-if="o.partner_id.partner_no">
                                [<span t-field="o.partner_id.partner_no"/>]
                        </td>
                        <td width="18%" t-if="o.team_id">
                                [<span t-field="o.team_id"/>]
                        </td>
                    </tr>
                </table>
        </template>
        
        <template id="nrq_invoice_footer_view">
        <p t-if="o.comment">    
                    <span t-field="o.comment"/>
                </p>
                <p t-if="o.payment_term_id">    
                    <span t-field="o.payment_term_id.note"/>
                </p>
                <div class="row zero_min_height">
                    <div class="col-xs-12">
                        <div style="border-bottom: 1px solid #DCDCDC;"></div>
                    </div>
                </div>
                <p t-if="o.bank_details">
                    <strong>Bank Details: </strong>
                    <span t-field="o.bank_details"/>
                </p>
                <p t-if="o.date_due">
                    <strong>Due Date: </strong>
                    <span t-field="o.date_due"/>  <span>Bank Charges are borne by the customer.</span>
                </p>
            </template>
    </data>
</openerp>