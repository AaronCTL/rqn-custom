<openerp>
<data>
    <report
        id="acceptance_report"
        model="account.invoice"
        string="Acceptance"
        name="nrq_account_report.acceptance_view" 
        file="nrq_account_report.acceptance_view"
        report_type="qweb-pdf" />

        <template id="acceptance_req_report">
            <table class="table"> 
                <thead>
                    <tr style="border-bottom:hidden;">
                        <td width="55%" style="background-color:black;"> 
                            <div></div>
                        </td>
                        <td width="5%" ></td>
                        <td width="45%">
                            <div>
                                <strong>Invoice Date: </strong><span t-field="o.date_invoice"/><br/>
                            </div>
                            <div>
                                <strong>Invoice Number: </strong><span t-field="o.number"/>
                            </div>
                        </td>
                    </tr>
                    <tr >
                        <td width="55%">
                            <h2>Acceptance</h2>
                        </td>
                        <td width="5%" style="border-bottom:hidden;"></td>
                        <td width="45%" style="border-bottom:hidden;"></td>
                    </tr>
                </thead>
            </table>
            <table class="table">
                <tr>
                    <td width="55%" >
                        <strong>Company Name: </strong><span t-field="o.company_id.name"/> <span t-field="o.partner_id.title"/> 
                    </td>
                    <td width="5%" style="border-bottom:hidden;border-top:hidden;"></td>
                    <td width="45%" style="border-bottom:hidden;border-top:hidden;">
                        <strong>Customer Name: </strong><span t-field="o.partner_id.name"/>
                    </td>
                </tr>
                <tr>
                    <td width="55%">
                        <span>Please find the details as follows.</span>
                    </td>
                    <td width="5%" style="border-bottom:hidden;"></td>
                    <td width="45%" style="border-bottom:hidden;">
                        <strong>Date: </strong>&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;____________________
                    </td>
                </tr>
                <tr>
                    <td width="55%">
                    </td>
                    <td width="5%" style="border-bottom:hidden;"></td>
                    <td width="45%" style="border-bottom:hidden;">
                        <strong>Signature: </strong>____________________
                    </td>
                </tr>
                <tr style="border-bottom:hidden;">
                    <td width="55%">
                        <strong>Doc Title: </strong><span t-field="o.doc_title"/>
                    </td>
                    <td width="5%" ></td>
                    <td width="45%" ></td>
                </tr>
                <tr>
                    <td></td>
                </tr>
            </table>
            <t t-call="nrq_account_report.nrq_invoice_table_view"/>
            <p t-if="o.comment">    
                <span t-field="o.comment"/>
            </p>
            <p t-if="o.payment_term_id">
                <span t-field="o.payment_term_id.note"/>
            </p>
        </template>
            
        <template id="acceptance_view">
                <t t-call="report.html_container">
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                              <t t-call="nrq_account_report.acceptance_req_report"/>
                        </div>
                    </t>
                </t>
            </template>
</data>
</openerp>
