<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="report_invoice_only_document">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
            <div class="page">
                <div class="row">
                    <table class="table"> 
                        <thead>
                            <tr style="border-bottom:hidden;">
                                <td width="65%" style="background-color:black;">
                                    <!--div></div-->
                                </td>
                                <td width="5%" >
                                </td>
                                <td width="30%">
                                    <strong>Invoice Date: </strong><span t-field="o.date_invoice"/><br/>
                                    <strong>Invoice Number: </strong><span t-field="o.number"/>
                                </td>
                            </tr>
                            <tr>
                                <td width="65%">
                                    <h2>
                                        <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice</span>
                                        <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>
                                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                                        <span t-if="o.type == 'out_refund'">Refund</span>
                                        <span t-if="o.type == 'in_refund'">Vendor Refund</span>
                                        <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                                    </h2>
                                </td>
                                <td width="5%" >
                                </td>
                                <td width="30%">
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <t t-call="nrq_account_report.nrq_invoice_header_view"/>
                    <t t-call="nrq_account_report.nrq_invoice_table_view"/>
                    <t t-call="nrq_account_report.nrq_invoice_footer_view"/>
                </div>
            </div>
        </template>
        
    <template id="report_invoice_only">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="nrq_account_report.report_invoice_only_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
            
        <!-- QWeb Reports -->
        <report 
            id="nrq_account_invoices_only"
            model="account.invoice"
            string="Only Invoices"
            report_type="qweb-pdf"
            name="nrq_account_report.report_invoice_only"
            file="nrq_account_report.report_invoice_only"
            attachment="(object.state in ('open','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
        />

    </data>
</odoo>
