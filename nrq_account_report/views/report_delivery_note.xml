<openerp>
<data>
    <report
        id="delivery_note_report"
        model="account.invoice"
        string="Delivery Note"
        name="nrq_account_report.delivery_note_view" 
        file="nrq_account_report.delivery_note_view"
        report_type="qweb-pdf" />

        <template id="delivery_report">
               
                    <table class="table"> 
                        <thead>
                            <tr style="border-bottom:hidden;">
                                <td width="65%" style="background-color:black;"> 
                                    <div></div>
                                </td>
                                <td width="5%" >
                                </td>
                                <td width="30%">
                                    <strong>Invoice Date: </strong><span t-field="o.date_invoice"/><br/>
                                    <strong>Invoice Number: </strong><span t-field="o.number"/>
                                </td>
                            </tr>
                            <tr>
                                <td width="65%">
                                    <h2>
                                        Delivery Note
                                    </h2>
                                </td>
                                <td width="5%" >
                                </td>
                                <td width="30%">
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <t t-call="nrq_account_report.nrq_invoice_header_view"/>
                    <t t-call="nrq_account_report.nrq_invoice_table_view"/>
                    <t t-call="nrq_account_report.nrq_invoice_footer_view"/>
                
        </template>

        <template id="delivery_note_view">
                <t t-call="report.html_container">
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <div class="row">
                                <t t-call="nrq_account_report.delivery_report"/>
                            </div>
                        </div>
                    </t>
                    </t>
        </template>
    </data>
</openerp>