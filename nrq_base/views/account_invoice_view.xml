<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
        <record id="delivry_notice_invoice_inherit" model="ir.ui.view">
            <field name="name">account.invoice</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="delivery_notice"/>
                </xpath>
            </field>
        </record>

        <record id="doc_title_invoice_inherit" model="ir.ui.view">
            <field name="name">account.invoice</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="doc_title"/>
                </xpath>
            </field>
        </record>
        
        <record id="due_date_invoice_inherit" model="ir.ui.view">
            <field name="name">account.invoice</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_due']" position="attributes">
                    <attribute name="group"></attribute>
                </xpath>
            </field>
        </record>
        
        <record id="bank_details_invoice_inherit" model="ir.ui.view">
            <field name="name">account.invoice</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_due']" position="after">
                    <field name="bank_details"/>
                </xpath>
            </field>
        </record>
</data>
</odoo>
