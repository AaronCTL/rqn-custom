<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="nrq_invoice_report_view"> 
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                            <div class="page">
                <div class="row">
                    <table class="table">
                        <thead>
                            <tr style="border-bottom:hidden;">
                                <td width="65%" style="background-color:black;"> 
                                    <div></div>
                                </td>
                                <td width="5%" >
                                </td>
                                <td width="30%">
                                    <strong>Invoice Date: </strong><span t-field="doc.date_invoice"/><br/>
                                    <strong>Invoice Number: </strong><span t-field="doc.number"/>
                                </td>
                            </tr>
                            <tr>
                                <td width="65%">
                                    <h2>
                                        <span t-if="doc.type == 'out_invoice' and (doc.state == 'open' or doc.state == 'paid')">Invoice</span>
                                        <span t-if="doc.type == 'out_invoice' and doc.state == 'proforma2'">PRO-FORMA</span>
                                        <span t-if="doc.type == 'out_invoice' and doc.state == 'draft'">Draft Invoice</span>
                                        <span t-if="doc.type == 'out_invoice' and doc.state == 'cancel'">Cancelled Invoice</span>
                                        <span t-if="doc.type == 'out_refund'">Refund</span>
                                        <span t-if="doc.type == 'in_refund'">Vendor Refund</span>
                                        <span t-if="doc.type == 'in_invoice'">Vendor Bill</span>
                                    </h2>
                                </td>
                                <td width="5%" >
                                </td>
                                <td width="30%">
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <t t-call="report_common_nrq.invoice_header_layout"/>
                    <t t-call="report_common_nrq.invoice_table_layout"/>
                    <t t-call="report_common_nrq.invoice_footer_layout"/>
                    <p style="page-break-before:always;"> </p>
                    <t t-call="report_account_nrq.acceptance_req_report"/>
                    <p style="page-break-before:always;"> </p>
                    <t t-if="doc.delivery_note" t-call="report_account_nrq.delivery_report"/>
                </div>
            </div>
            </t>
        </t>
    </template>

<report
    id="nrq_inoice_report"
    model="account.invoice"
    string="Invoice + Acceptance (NRQ)"
    name="report_account_nrq.nrq_invoice_report_view"
    file="report_account_nrq.nrq_invoice_report_view"
    report_type="qweb-pdf" />

</odoo>
