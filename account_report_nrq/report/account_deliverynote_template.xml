<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <template id="delivery_report">

                <table class="table">
                    <thead>
                        <tr style="border-bottom:hidden;">
                            <td width="65%" style="background-color:black;">
                                <div></div>
                            </td>
                            <td width="5%" >
                            </td>
                            <td width="30%">
                                <strong>Invoice Date: </strong><span t-field="doc.date_invoice"/><br/>
                                <strong>Invoice Number: </strong><span t-field="doc.number"/>
                            </td>
                        </tr>
                        <tr>
                            <td width="65%">
                                <h2>
                                    Delivery Note
                                </h2>
                            </td>
                            <td width="5%" >
                            </td>
                            <td width="30%">
                            </td>
                        </tr>
                    </thead>
                </table>
                <t t-call="account_report_nrq.invoice_header_layout"/>
                <t t-call="account_report_nrq.invoice_table_layout"/>
                <t t-call="account_report_nrq.invoice_footer_layout"/>

    </template>

    <template id="delivery_note_view">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <div class="row">
                            <t t-call="account_report_nrq.delivery_report"/>
                        </div>
                    </div>
                </t>
                </t>
    </template>

    <report
        id="delivery_note_report"
        model="account.invoice"
        string="Delivery Note (NRQ)"
        name="account_report_nrq.delivery_note_view"
        file="account_report_nrq.delivery_note_view"
        report_type="qweb-pdf" />

</data>
</openerp>